<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE sailpoint PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<sailpoint>
    <ImportAction name="merge">
        <Configuration name="PluginFrameworkConfig">
            <Attributes>
                <Map>
                    <entry key="Plugins">
                        <value>
                            <Map>
                                <entry key="GeoMap">
                                    <value>
                                        <Plugin uniqueName="GeoMap" displayName="Geo Map" enabled="true"
                                                version="0.0.2" allowDisable="true" visible="true" allowUninstall="true"
                                                minFrameworkVersion="0.1.0" maxFrameworkVersion="1.0.0"
                                                minUpgradableVersion="0.1.3" certificationLevel="BASIC"
                                                pluginAccessRight="geoMapPluginRight">

                                            <PluginConfiguration
                                                    settingsPageTemplateURL="ui/htmlTemplates/pluginSettings.html">
                                                <FullPage desktopIncludePath="{plugin_root}/ui/hello.xhtml"
                                                          mobileIncludePath="{plugin_root}/ui/hello.xhtml"/>
                                                <Snippets>

                                                        <Snippet pagesMatchRegExPattern=".*\/home.xhtml" isMobile="true"
                                                                 isDesktop="true" rightRequired="geoMapPluginIconRight" >
                                                            <ScriptIncludes>
                                                                <String>{plugin_root}/ui/js/geoInject.js</String>
                                                            </ScriptIncludes>
                                                            <StylesheetIncludes>
                                                                <String>{plugin_root}/ui/css/geoMap.css</String>
                                                            </StylesheetIncludes>
                                                        </Snippet>
        
                                                        <Snippet pagesMatchRegExPattern=".*" isMobile="true"
                                                               isDesktop="true" rightRequired="geoMapPluginIconRight" >
                                                               <ScriptIncludes>
                                                                <String>{plugin_root}/ui/js/geoInject2.js</String>
                                                            </ScriptIncludes>
                                                            <StylesheetIncludes>
                                                                <String>{plugin_root}/ui/css/geoMap.css</String>
                                                            </StylesheetIncludes>
                                                        </Snippet>

                                            </Snippets>
                                            </PluginConfiguration>
                                            <ConfigurableSettings>
                                                <Map>
                                                    <entry key="Message" value="Geo Map"/>
                                                </Map>
                                            </ConfigurableSettings>
                                        </Plugin>
                                    </value>
                                </entry>
                            </Map>
                        </value>
                    </entry>
                </Map>
            </Attributes>
        </Configuration>
    </ImportAction>
</sailpoint>



